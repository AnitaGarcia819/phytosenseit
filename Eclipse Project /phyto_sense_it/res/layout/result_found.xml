<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Disease found:"
        android:textStyle="normal|bold|italic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

   
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            
            <TextView
                android:id="@+id/disease_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="diseasename"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />
	
	    <ImageView
	        android:id="@+id/disease_image_view"
	        android:layout_width="220dp"
	        android:layout_height="270dp"
	        android:layout_below="@+id/disease_name"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="18dp"
	        android:scaleType="fitXY"
	        android:src="@drawable/tomato_bacterial_spot_13" />
	  <TextView
	        android:id="@+id/disease_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/disease_image_view"
	        android:layout_marginTop="10dp"
	        android:layout_toLeftOf="@+id/again"
	        android:text="info"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="#000000" />
	  
	    <TextView
	        android:id="@+id/link_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/disease_info"
	        android:layout_marginTop="10dp"
	        android:layout_toLeftOf="@+id/again"
	        android:layout_centerHorizontal="true"
	        android:text="info"
	        android:textStyle="normal|italic"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="#000000" />
            
	          <Button
                android:id="@+id/again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  android:layout_below="@+id/disease_info"
                  android:layout_marginTop="10dp"
                android:text="Try Again"
                android:textStyle="bold" />
            
            
        </LinearLayout>
    </ScrollView>
    
</RelativeLayout>