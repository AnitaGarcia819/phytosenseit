<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Diseased found:"
        android:textStyle="normal|bold|italic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/disease_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <Button
        android:id="@+id/again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Try Again"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/disease_image_view"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_below="@+id/disease_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:scaleType="fitXY"
        android:src="@drawable/tomato_bacterial_spot_13" />

    <TextView
        android:id="@+id/disease_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disease_image_view"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/again"
        android:text="adljfaljd asdjfla"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />
    
</RelativeLayout>